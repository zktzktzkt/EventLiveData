<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">#010D19</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="TextViewSubTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">#BF00060C</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="ImageViewStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:src">@drawable/icon_unlike</item>
        <item name="android:contentDescription">@string/app_name</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

</resources>